{
    "project": {
        "name": "Gitmake", 
        "description": "A simple build/release manager for git."
    }, 
    "release": {
        "files": ["gitmake.py", "README.md"], 
        "filename": "gitmake", 
        "format": "zip"
    }, 
    "build": {
        "version_file": "version.py", 
        "build_command": "python build.py", 
        "clean_command": "rm *.pyc"
    }, 
    "settings": {
        "build_directory": "_build"
    }
}
